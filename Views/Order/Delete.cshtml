@model InventoryControlSystem.ViewModels.OrderViewModel


<div class="row">
    <div class="col-12">
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">@ViewData["Title"]</h3>
            </div>
            <!-- /.card-header -->
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-3">
                        @Html.DisplayNameFor(model => model.Order.NumProducts)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Order.NumProducts)
                    </dd>
                    <dt class="col-sm-3">
                        @Html.DisplayNameFor(model => model.Order.Status)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Order.Status)
                    </dd>
                    <dt class="col-sm-3">
                        @Html.DisplayNameFor(model => model.Order.Fulfilled)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Order.Fulfilled)
                    </dd>
                    <dt class="col-sm-3">
                        @Html.DisplayNameFor(model => model.Order.Ordered)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Order.Ordered)
                    </dd>
                    <dt class="col-sm-3">
                        @Html.DisplayNameFor(model => model.Order.OrderList)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Order.OrderList)
                    </dd>
                    <dt class="col-sm-3">
                        @Html.DisplayNameFor(model => model.Order.OrderDate)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Order.OrderDate)
                    </dd>
                </dl>
                <h4><b>Products</b></h4>
                <table id="example1" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Product.Id)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Product.Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Product.Type)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Product.Brand)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Product.NumBottles)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Product.BottleSize)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Product.NumUnits)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Product.TotalCost)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Product.SuppliersName)
                            </th>                   
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Products)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Id)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Type)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Brand)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NumBottles)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.BottleSize)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NumUnits)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TotalCost)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.SuppliersName)
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <br />
                <div>
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="@Model.Order.ID" />
                        <input type="submit" value="Delete" class="btn btn-danger float-right" />
                        <a asp-action="Index" class="btn btn-secondary float-left">Back to List</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

