@model InventoryControlSystem.Models.Order

<div class="row">
    <div class="col-md-4">
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">@ViewData["Title"]</h3>
            </div>
            <!-- /.card-header -->
            <div class="card-body">
                <dl class="row">             
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.NumProducts)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.NumProducts)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Status)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Status)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Fulfilled)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Fulfilled)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Ordered)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Ordered)
                    </dd>
                </dl>
                <div>
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="ID" />
                        <input type="submit" value="Delete" class="btn btn-danger float-right" /> 
                        <a asp-action="Index" class="btn btn-secondary float-left">Back to List</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

