@model InventoryControlSystem.ViewModels.OrderViewModel


<div class="row">
    <div class="col-md-4">
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">@ViewData["Title"]</h3>
            </div>
            <!-- /.card-header -->
            <div class="card-body">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="@Model.Order.ID" />                   
                    <div hidden class="form-group">                        
                        <select asp-for="@Model.Order.CustomerID" class="select2" multiple="multiple" data-placeholder="Select a Product" style="width: 100%;">
                                <option selected value="@Model.Order.CustomerID">@Model.Order.CustomerID</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Order.ProductsID">Select a Product</label>
                        <select required asp-for="@Model.Order.ProductsID" class="select2" multiple="multiple" data-placeholder="Select a Product" style="width: 100%;">

                            @foreach (Product product in @Model.Products)
                            {
                                <option value="@product.ID:@product.TotalCost">@product.Name</option>
                            }
                        </select>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Order.Status" class="control-label"></label>
                        <input asp-for="@Model.Order.Status" class="form-control" />
                        <span asp-validation-for="@Model.Order.Status" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Order.Fulfilled" class="control-label"></label>
                        <input asp-for="@Model.Order.Fulfilled" class="form-control" />
                        <span asp-validation-for="@Model.Order.Fulfilled" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Order.Ordered" class="control-label"></label>
                        <input asp-for="@Model.Order.Ordered" class="form-control" />
                        <span asp-validation-for="@Model.Order.Ordered" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Order.OrderList" class="control-label"></label>
                        <input asp-for="@Model.Order.OrderList" class="form-control" />
                        <span asp-validation-for="@Model.Order.OrderList" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <a asp-action="Index" class="btn btn-secondary float-left">Back to List</a>

                        <input type="submit" value="Save" class="btn btn-primary float-right" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
