@model InventoryControlSystem.ViewModels.SupplierViewModel

<div class="row">
    <div class="col-md-4">
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">@ViewData["Title"]</h3>
            </div>
            <!-- /.card-header -->
            <div class="card-body">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="@Model.Supplier.ID" />
                    <div class="form-group">
                        <label asp-for="@Model.Supplier.Name" class="control-label"></label>
                        <input asp-for="@Model.Supplier.Name" class="form-control" />
                        <span asp-validation-for="@Model.Supplier.Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Supplier.Email" class="control-label"></label>
                        <input asp-for="@Model.Supplier.Email" class="form-control" />
                        <span asp-validation-for="@Model.Supplier.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Supplier.Phone" class="control-label"></label>
                        <input asp-for="@Model.Supplier.Phone" class="form-control" />
                        <span asp-validation-for="@Model.Supplier.Phone" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Supplier.Address" class="control-label"></label>
                        <input asp-for="@Model.Supplier.Address" class="form-control" />
                        <span asp-validation-for="@Model.Supplier.Address" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Supplier.ProductsID">Select Products</label>
                        <select asp-for="@Model.Supplier.ProductsID" class="select2" multiple="multiple" data-placeholder="Select Products" style="width: 100%;">

                            @foreach (Product product in @Model.Products)
                            {
                                <option value="@product.ID">@product.Name</option>
                            }

                        </select>
                    </div>

                    <div class="form-group">
                        <a asp-action="Index" class="btn btn-secondary float-left">Back to List</a>
                        <input type="submit" value="Save" class="btn btn-primary float-right" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
