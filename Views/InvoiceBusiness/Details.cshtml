@model InventoryControlSystem.ViewModels.InvoiceBusinessViewModel


<div class="invoice p-3 mb-3">
    <!-- title row -->
    <div class="row">
        <div class="col-12">
            <h4>
                <i class="fas fa-globe"></i> @Model.InvoiceBusiness.SenderName
                @*<small class="float-right">@Model.InvoiceBusiness.Date</small>*@
            </h4>
        </div>
        <!-- /.col -->
    </div>
    <!-- info row -->
    <div class="row invoice-info">
        <div class="col-sm-4 invoice-col">
            <strong><u>FROM</u></strong>
            <address>
                <strong>@Model.InvoiceBusiness.SenderName</strong><br>
                <strong><u>Address</u></strong><br>
                @Model.InvoiceBusiness.SenderAddress<br>
                <strong><u>Phone</u></strong><br>
                @Model.InvoiceBusiness.SenderPhone<br>
                <strong><u>Email</u></strong><br>
                @Model.InvoiceBusiness.SenderEmail
            </address>
        </div>
        <!-- /.col -->
        <div class="col-sm-4 invoice-col">
            <strong><u>TO</u></strong>
              <address>
                  <strong>@Model.InvoiceBusiness.RecieverName</strong><br>
                  <strong><u>Address</u></strong><br>
                  @Model.InvoiceBusiness.RecieverAddress<br>
                  <strong><u>Phone</u></strong><br>
                  @Model.InvoiceBusiness.RecieverPhone<br>
                  <strong><u>Email</u></strong><br>
                  @Model.InvoiceBusiness.RecieverEmail
              </address>
        </div>
        <!-- /.col -->
        <div class="col-sm-4 invoice-col">
            <b>Invoice: </b>@Model.InvoiceBusiness.ID<br>
            <br>
            <b>Order ID: </b>@Model.InvoiceBusiness.OrderListID<br>
            <b>Payment Completed: </b>@Model.InvoiceBusiness.Date<br>
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
    <!-- Table row -->
    <div class="row">
        <div class="col-12 table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        @*<th>Qty</th>*@
                        <th>Product</th>
                        <th>Subtotal</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Products)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TotalCost)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->

    <div class="row">
        <!-- accepted payments column -->
        <div class="col-6">
            <p class="lead">Payment Methods:</p>
            <img src="~/Theme_AdminLTE/dist/img/credit/visa.png" alt="Visa">
            <img src="~/Theme_AdminLTE/dist/img/credit/mastercard.png" alt="Mastercard">
            <img src="~/Theme_AdminLTE/dist/img/credit/american-express.png" alt="American Express">
            <img src="~/Theme_AdminLTE/dist/img/credit/paypal2.png" alt="Paypal">

        </div>
        <!-- /.col -->
        <div class="col-6">
            <p class="lead">Total Amount</p>

            <div class="table-responsive">
                <table class="table">
                    <tr>
                        <th>Total:</th>
                        <td>$@Model.InvoiceBusiness.TotalCost</td>
                    </tr>
                </table>
            </div>
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
    <!-- this row will not appear when printing -->
    <div class="row no-print">
        <div class="col-12">
            <a asp-action="Index" class="btn btn-secondary float-left">Back to List</a>
            <a asp-action="PrintInvoice" asp-route-id="@Model.InvoiceBusiness.Id" target="_blank" class="btn btn-default float-right"><i class="fas fa-print"></i> Print</a>
        </div>
    </div>
</div>
<!-- /.invoice -->